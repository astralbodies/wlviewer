{
  "name": "wlviewer-desktop",
  "version": "1.0.0",
  "description": "WeatherLink Live Viewer - Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": ["weatherlink", "weather", "electron"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.wlviewer.app",
    "productName": "WeatherLink Live Viewer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "../server",
        "to": "app/server"
      },
      {
        "from": "../dist",
        "to": "app/dist"
      },
      {
        "from": "../public",
        "to": "app/public"
      },
      {
        "from": "../node_modules",
        "to": "app/node_modules"
      },
      {
        "from": "../package.json",
        "to": "app/package.json"
      }
    ],
    "mac": {
      "category": "public.app-category.weather",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    }
  }
}
